{
    "gateway": {
        "mode": "local",
        "bind": "loopback",
        "controlUi": {
            "allowInsecureAuth": true
        }
    },
    "plugins": {
        "enabled": true,
        "entries": {
            "whatsapp": {
                "enabled": true
            },
            "telegram": {
                "enabled": true
            },
            "signal": {
                "enabled": true
            },
            "discord": {
                "enabled": true
            },
            "memory-cognee": {
                "enabled": true,
                "config": {
                    "baseUrl": "http://159.203.34.253:8000",
                    "apiKey": "${COGNEE_API_TOKEN}",
                    "datasetName": "openclaw-memory",
                    "searchType": "GRAPH_COMPLETION",
                    "autoRecall": true,
                    "autoIndex": true
                }
            }
        }
    },
    "models": {
        "mode": "merge",
        "providers": {
            "gradient": {
                "baseUrl": "https://inference.do-ai.run/v1",
                "apiKey": "${GRADIENT_API_KEY}",
                "api": "openai-completions",
                "models": [
                    {
                        "id": "llama3.3-70b-instruct",
                        "name": "Llama 3.3 70B Instruct",
                        "reasoning": false,
                        "input": [
                            "text"
                        ],
                        "contextWindow": 128000,
                        "maxTokens": 8192
                    },
                    {
                        "id": "deepseek-r1-distill-llama-70b",
                        "name": "DeepSeek R1 Distill Llama 70B",
                        "reasoning": true,
                        "input": [
                            "text"
                        ],
                        "contextWindow": 128000,
                        "maxTokens": 8192
                    },
                    {
                        "id": "openai-gpt-oss-120b",
                        "name": "OpenAI GPT OSS 120B",
                        "reasoning": false,
                        "input": [
                            "text"
                        ],
                        "contextWindow": 128000,
                        "maxTokens": 8192
                    }
                ]
            },
            "openai": {
                "baseUrl": "https://api.openai.com/v1",
                "apiKey": "${OPENAI_API_KEY}",
                "api": "openai-completions",
                "models": [
                    {
                        "id": "gpt-4o",
                        "name": "GPT-4o",
                        "reasoning": false,
                        "input": [
                            "text",
                            "image"
                        ],
                        "contextWindow": 128000,
                        "maxTokens": 16384
                    },
                    {
                        "id": "gpt-4o-mini",
                        "name": "GPT-4o Mini",
                        "reasoning": false,
                        "input": [
                            "text",
                            "image"
                        ],
                        "contextWindow": 128000,
                        "maxTokens": 16384
                    },
                    {
                        "id": "o1",
                        "name": "o1",
                        "reasoning": true,
                        "input": [
                            "text"
                        ],
                        "contextWindow": 200000,
                        "maxTokens": 100000
                    },
                    {
                        "id": "gpt-5-mini",
                        "name": "GPT-5 Mini",
                        "reasoning": true,
                        "input": [
                            "text",
                            "image"
                        ],
                        "contextWindow": 200000,
                        "maxTokens": 100000
                    }
                ]
            }
        }
    },
    "agents": {
        "defaults": {
            "model": {
                "primary": "openai/gpt-5-mini"
            }
        }
    }
}
